    <ImageView fx:id="image2"
               fitHeight="130"
               preserveRatio="true"
               pickOnBounds="true">
        <Image url="@/images/image2.png" />
        <AnchorPane.topAnchor>53</AnchorPane.topAnchor>
        <AnchorPane.leftAnchor>210</AnchorPane.leftAnchor>
    </ImageView>

    <CheckBox fx:id="checkbox2"
              text="Патрик"
              selected="true"
              onAction="#handleCheckboxAction">
        <AnchorPane.topAnchor>200</AnchorPane.topAnchor>
        <AnchorPane.leftAnchor>230</AnchorPane.leftAnchor>
    </CheckBox>

    <ImageView fx:id="image3"
               fitHeight="130"
               preserveRatio="true"
               pickOnBounds="true">
        <Image url="@/images/image3.png" />
        <AnchorPane.topAnchor>53</AnchorPane.topAnchor>
        <AnchorPane.leftAnchor>390</AnchorPane.leftAnchor>
        <AnchorPane.rightAnchor>5</AnchorPane.rightAnchor>
    </ImageView>

    <CheckBox fx:id="checkbox3"
