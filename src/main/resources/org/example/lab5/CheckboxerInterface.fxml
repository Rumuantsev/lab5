<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.lab5.CheckboxerController"
            style="-fx-padding: 20;">
    <HBox>
        <AnchorPane.topAnchor>5</AnchorPane.topAnchor>
        <AnchorPane.leftAnchor>5</AnchorPane.leftAnchor>
        <Button layoutX="10.0" layoutY="10.0" prefWidth="115.0" prefHeight="40.0" fx:id="btnToSwitcher" text="Задание 1" onAction="#loadSwitcher"/>
        <Button layoutX="10.0" layoutY="10.0" prefWidth="115.0" prefHeight="40.0" fx:id="btnToRestaurant" text="Задание 3" onAction="#loadRestaurant"/>
