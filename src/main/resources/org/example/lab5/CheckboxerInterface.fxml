        <Button layoutX="10.0" layoutY="10.0" prefWidth="115.0" prefHeight="40.0" fx:id="btnToFlag" text="Задание 5" onAction="#loadFlag"/>
    </HBox>

    <ImageView fx:id="image1"
               fitHeight="130"
               preserveRatio="true"
               pickOnBounds="true">
        <Image url="@/images/image1.png" />
        <AnchorPane.topAnchor>50</AnchorPane.topAnchor>
        <AnchorPane.leftAnchor>5</AnchorPane.leftAnchor>
    </ImageView>

    <CheckBox fx:id="checkbox1"
              text="Спанч Боб"
              selected="true"
              onAction="#handleCheckboxAction">
