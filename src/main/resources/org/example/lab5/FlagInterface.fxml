<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.lab5.FlagController"
      spacing="20"
      style="-fx-padding: 20;"
       >

    <!-- Первая строка -->
    <HBox spacing="10">
        <Label text="Номер 1"/>
        <ComboBox fx:id="colorComboBox1" prefWidth="150"/>
    </HBox>

    <!-- Вторая строка -->
    <HBox spacing="10">
        <Label text="Номер 2"/>
        <ComboBox fx:id="colorComboBox2" prefWidth="150"/>
    </HBox>

    <!-- Третья строка -->
    <HBox spacing="10">
        <Label text="Номер 3"/>
        <ComboBox fx:id="colorComboBox3" prefWidth="150"/>
    </HBox>

    <!-- Кнопка для вывода выбранных цветов -->
    <Button text="Показать выбранные цвета" onAction="#showSelectedColors" prefWidth="200"/>

</VBox>
